<h2 class="text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <form class="row g-3">
    <div class="col-md-6 mx-auto text-center">
      <div class="mb-3">

        <% if resource.is_a?(Doctor) %>
          <div class="mb-3">
            <%= f.label :category_id, class: "form-label" %>
            <%= f.collection_select :category_id, Category.all, :id, :title, { prompt: "Select category" }, class: "form-select" %>
          </div>
        <% end %>

        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
      </div>

      <div class="mb-3">
        <%= f.label :phone, class: "form-label" %>
        <%= f.text_field :phone, autofocus: true, class: "form-control", placeholder: "Enter your phone number" %>
      </div>

      <div class="mb-3">
        <%= f.label :full_name, class: "form-label" %>
        <%= f.text_field :full_name, autofocus: true, class: "form-control", placeholder: "Enter your full name" %>
      </div>
    </div>

    <div class="col-md-6 mx-auto text-center">
      <div class="mb-3">
        <%= f.label :age, class: "form-label" %>
        <%= f.number_field :age, class: "form-control", placeholder: "Enter your age" %>
      </div>

      <div class="mb-3">
        <%= f.label :city, class: "form-label" %>
        <%= f.text_field :city, class: "form-control", placeholder: "Enter your city" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label" %>
        <% if @minimum_password_length %>
          <small>(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Enter your password" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm your password" %>
      </div>
    </div>

    <div class="col-12 text-center">
      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    </div>
  </form>
<% end %>
