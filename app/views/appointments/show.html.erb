<!-- app/views/appointments/show.html.erb -->
<br>
<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-header">
        <h2>Appointment Details</h2>
      </div>

      <div class="card-body">
        <p><strong>Status:</strong> Closed</p>
        <p><strong>Date:</strong> <%= @appointment.date %></p>
        <p><strong>Time:</strong> <%= @appointment.time %></p><hr>
        <p><strong>Problem:</strong> <%= @appointment.problem %></p>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-header">
        <h2>Recommendation</h2>
      </div>
      <div class="card-body">
        <% if @recommendation %>
          <p><strong>From Doctor:</strong> <%= @appointment.doctor.email %></p>
          <p><%= @recommendation.content %></p>
        <% else %>
          <p>No recommendation available.</p>
        <% end %>

        <%= link_to "Recommendations", new_appointment_recommendation_path(@appointment), class:"btn btn-primary type=button" if doctor_signed_in? %>
      </div>
    </div>
  </div>
</div>

<hr>
<div class="d-grid gap-2">
<%= link_to " << Back to Appointments", doctor_path(@appointment.doctor), class:"btn btn-primary type=button" %>
</div>
