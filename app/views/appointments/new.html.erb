<!-- app/views/appointments/new.html.erb -->
<div class="container mt-5">
  <h2>Create New Appointment</h2>
  <%= form_with(model: [@doctor, @appointment], url: doctor_appointments_path(@doctor), class: "mt-3") do |form| %>
    <div class="mb-3">
      <%= form.label :date, class: "form-label" %>
      <%= form.date_field :date, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :time, class: "form-label" %>
      <%= form.time_field :time, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :problem, class: "form-label" %>
      <%= form.text_area :problem, class: "form-control", rows: 4 %>
    </div>

    <%= form.submit "Create Appointment", class: "btn btn-primary" %>
  <% end %>
</div>
